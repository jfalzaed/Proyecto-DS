<form>
        <label for="producto">Producto:</label>
        <input type="text" id="producto" name="producto">
        <button onclick="buscar()">Buscar</button>
    </form>
    <div id="precios"></div>

    <script>
        const maquinasExpendedoras = [
            {
                nombre: "Máquina Bloque 38 #1",
                productos: [
                    { nombre: "Gatorade", precio: 10 },
                    { nombre: "Muffin", precio: 15 },
                    { nombre: "Papas", precio: 20 }
                ]
            },
            {
                nombre: "Máquina bloque 33",
                productos: [
                    { nombre: "Gatorade", precio: 12 },
                    { nombre: "Muffin", precio: 17 },
                    { nombre: "Papas", precio: 22 }
                ]
            },
            {
                nombre: "Máquina bloque 33",
                productos: [
                    { nombre: "Gatorade", precio: 11 },
                    { nombre: "Muffin", precio: 14 },
                    { nombre: "Papas", precio: 18 }
                ]
            }
        ];

        function buscar() {
            const producto = document.getElementById("producto").value;
            let preciosHTML = "";
            for (const maquina of maquinasExpendedoras) {
                const productoEncontrado = maquina.productos.find(p => p.nombre === producto);
                if (productoEncontrado) {
                    preciosHTML += `<p>En ${maquina.nombre} el precio de ${productoEncontrado.nombre} es de ${productoEncontrado.precio}.</p>`;
                }
            }
            document.getElementById("precios").innerHTML = preciosHTML;
        }
    </script>
</body>

</html>
